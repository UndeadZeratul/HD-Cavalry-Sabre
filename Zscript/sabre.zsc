		switch (_swingMode) {
			case HDCMW_ATTACK_THRUST:
				return "HDSabreSparkV";
			case HDCMW_ATTACK_DOWN:
				return "HDSabreSparkL";
			case HDCMW_ATTACK_RIGHT:
				return "HDSabreSparkR";
			case HDCMW_ATTACK_UP:
